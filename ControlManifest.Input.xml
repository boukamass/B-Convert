<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="Brasco" constructor="BConvert" version="1.0.0" display-name-key="B-Convert" description-key="Conversions instantanées entre bouteilles, casiers et hectolitres avec précision pour les brasseries du Congo (Brasco)" control-type="standard">
    
    <!-- Property nodes describe the input properties for the component -->
    <property name="productId" display-name-key="Product ID" description-key="ID of the selected product" of-type="SingleLine.Text" usage="bound" required="false" />
    <property name="initialValue" display-name-key="Initial Value" description-key="Initial conversion value" of-type="Whole.None" usage="bound" required="false" />
    <property name="initialUnit" display-name-key="Initial Unit" description-key="Initial unit (bottle, crate, hl)" of-type="SingleLine.Text" usage="bound" required="false" />
    
    <!-- Output properties -->
    <property name="selectedProductId" display-name-key="Selected Product ID" description-key="Currently selected product ID" of-type="SingleLine.Text" usage="output" />
    <property name="conversionValue" display-name-key="Conversion Value" description-key="Current conversion value" of-type="Whole.None" usage="output" />
    <property name="conversionUnit" display-name-key="Conversion Unit" description-key="Current unit" of-type="SingleLine.Text" usage="output" />
    
    <!-- Resources define files bundled with the component -->
    <resources>
      <code path="bundle.js" order="1"/>
      <css path="style.css" order="1" />
      <img path="assets/brasco-logo.png" />
    </resources>
    
    <!-- Feature usage declarations -->
    <feature-usage>
      <uses-feature name="WebAPI" required="false" />
      <uses-feature name="Utility" required="false" />
    </feature-usage>
  </control>
</manifest>
